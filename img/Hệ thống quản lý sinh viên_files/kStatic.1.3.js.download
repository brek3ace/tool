        var _p = this._eurc(this._document.location.protocol);
        var _v = kverify;
        var _s = "";
        if (self.screen) {
            _s = screen.width + 'x' + screen.height;
        }
        var URL = this._u + "?"
            + "cmd=" + cmd
            + "&p=" + _p
            + "&t=" + _t
            + "&f=" + _f
            + "&r=" + _r
            + "&s=" + _s
            + "&v=" + _v;
